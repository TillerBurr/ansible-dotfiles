theme = catppuccin-frappe
shell-integration = zsh
font-family = JetBrainsMono Nerd Font Mono
mouse-hide-while-typing = true
scrollback-limit = 1000000

keybind = ctrl+n=new_window

keybind = unconsumed:ctrl+h=goto_split:left
keybind = unconsumed:ctrl+j=goto_split:bottom
keybind = unconsumed:ctrl+k=goto_split:top
keybind = unconsumed:ctrl+l=goto_split:right

keybind = ctrl+a>h=new_split:left
keybind = ctrl+a>j=new_split:down
keybind = ctrl+a>k=new_split:up
keybind = ctrl+a>l=new_split:right
keybind = ctrl+a>f=toggle_split_zoom

keybind = ctrl+a>n=next_tab
keybind = ctrl+a>p=previous_tab
keybind = ctrl+a>t=new_tab

keybind = super+r=reload_config

window-save-state = always

keybind = global:ctrl+grave_accent=toggle_quick_terminal
